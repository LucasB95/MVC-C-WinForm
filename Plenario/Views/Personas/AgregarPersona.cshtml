@model Plenario.Models.Personas

@{
    ViewData["Title"] = "Crear Persona";
}

<h1 class="traducir">Crear Persona</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarPersona">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label traducir"></label>
                <input asp-for="Nombre" class="form-control" required/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label traducir"></label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" required />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditoMaximo" class="control-label traducir"></label>
                <input asp-for="CreditoMaximo" class="form-control" required/>
                <span asp-validation-for="CreditoMaximo" class="text-danger"></span>
            </div>
        <div class="form-group" style="padding-top:2%">
            <button type="submit" value="Crear" class="btn btn-primary traducir">Crear</button>
            <a asp-action="Index" class="btn btn-danger traducir">Cancelar</a>

        </div>
        </form>
    </div>
</div>
